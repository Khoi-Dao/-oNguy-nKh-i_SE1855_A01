<Window x:Class="ĐàoNguyênKhôiWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ĐàoNguyênKhôiWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,146">

        <TextBox x:Name="UserName"  Text="{Binding Username}" Margin="104,111,461,144"/>
        <PasswordBox x:Name="PasswordBox" Margin="104,153,460,105"/>
        <Button Content="Login" Click="btnLogin_Click" Margin="49,210,640,44"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="29,109,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="31,155,0,0" VerticalAlignment="Top"/>
        <Label Content="Admin Login" HorizontalAlignment="Left" Margin="183,49,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
